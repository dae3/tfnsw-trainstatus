pipeline {
	// a change
  agent none
    parameters { 
      string(name: 'Environment', defaultValue: 'dev', description: 'target environment name')
    }

  stages {
    stage('build') {
      agent {
        docker {
          image 'node:10-alpine'
            args '-p 3000:3000'
        }
      }
      steps {
        dir('formatAlertForPush') {
          sh 'npm install'
          zip zipFile: 'formatAlertForPush.zip'
        } 
      }
    }
		stage('deploy') {
			agent none

			steps {
				s3Upload bucket: 'tfnsw-${Environment}-code', sourceFile 'formatAlertForPush.zip', noUploadOnFailure: true
			}
		}
  }
}
